
process {
    withLabel: porky {
        cpus = 16
        memory = 32.GB
    }
    withName:masurca {
        container = "collingswortht/dev_masurca:latest"
    }
    withName:annotate {
        container = "collingswortht/dev_annotate:latest"
    }
}

docker {
    enabled = true
    remove = true
}

manifest {
    author = "Timothy D. Collingsworth"
    description = "Pipeline generates an annotated draft assembly from Illumina short read and Nanopore long read data."
    homePage = ""
    mainScript = "assemble-annotate.nf"
    version = "1.0.0"
}

trace {
    enabled = true
}

timeline {
    enabled = true
}

report {
    enabled = true
}
